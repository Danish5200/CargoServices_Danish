@model CargoServices_Danish.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<div class="header">
    <h1 class="page-header">
        Vehicle
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index">Vehicle</a></li>
        <li><a asp-action="">Edit</a></li>
    </ol>
</div>
<div id="page-inner ">
    <div class="row space80">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-action">
                    Add Vehicle
                </div>
                <div class="card-content">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="VehicleNo" class="control-label"></label>
                            <input asp-for="VehicleNo" class="form-control" />
                            <span asp-validation-for="VehicleNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VehicleTypeID" class="control-label"></label>
                            <select asp-for="VehicleTypeID" class="form-control" asp-items="ViewBag.VehicleTypeID"></select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </form>
                    <div class="clearBoth"></div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
