@model IEnumerable<CargoServices_Danish.Models.Job>

@{
    ViewData["Title"] = "Index";
}



<div class="header">
    <h1 class="page-header">
        Job
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index">Job</a></li>
        <li><a asp-action="Create">Create New</a></li>
    </ol>
</div>
<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <div class="tabledes">
                <div class="card">
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Customer)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Driver)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Vehicle)
                                        </th>
                                        <th>
                                            Action
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Driver.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vehicle.VehicleNo)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>

            <footer>
                <p>All right reserved <a href="#">Footer</a></p>
            </footer>
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
</div>

